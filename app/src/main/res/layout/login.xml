<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="7dp"
        android:alpha="0.7"
        android:gravity="center"
        android:text="WELCOME TO
        KENYA TRAVEL GUIDE"
        android:textColor="@color/colorPrimary"
        android:textSize="34sp"
        app:fontFamily="@font/passero_one" />

    <TextView
        android:id="@+id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="245dp"
        android:fontFamily="@font/font_awesome"
        android:textSize="20sp"
        android:text="@string/fa_icon_user"
        android:textColor="@color/colorPrimary" />


    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="225dp"
            android:hint="Username"
            android:inputType="textEmailAddress"
        android:textColor="@color/colorDivider"
            android:textColorHint="@color/colorDivider"
            android:textSize="18sp"
            app:fontFamily="@font/prompt"/>

    <View android:layout_marginTop="300dp"
        style="@style/Divider"/>

    <TextView
        android:id="@+id/icon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="326dp"
        android:fontFamily="@font/font_awesome"
        android:textSize="20sp"
        android:text="@string/fa_icon_user_lock"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="306dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textColor="@color/colorDivider"
        android:textColorHint="@color/colorDivider"
        android:textSize="18sp"
        app:fontFamily="@font/prompt"
        app:passwordToggleEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <View android:layout_marginTop="380dp"
        style="@style/Divider"/>

    <!--    <Button-->
<!--        android:id="@+id/forgotPassword"-->
<!--        android:layout_width="170dp"-->
<!--        android:layout_height="33dp"-->
<!--        android:layout_alignParentRight="true"-->
<!--        android:layout_marginRight="50dp"-->
<!--        android:layout_marginTop="395dp"-->
<!--        android:background="#00000000"-->
<!--        android:text="Forgot Password"-->
<!--        android:textColor="@color/colorDivider"-->
<!--        android:textSize="12sp" />-->

    <Button
        android:id="@+id/login"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="455dp"
        android:text="Log in"
        android:textColor="@color/colorSecondaryText"
        app:backgroundTint="@color/colorPrimaryDark"
        app:cornerRadius="15dp" />

    <TextView
        android:id="@+id/signUpLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="515dp"
        android:text="Don't have an account? Sign up"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        app:fontFamily="@font/prompt" />

    <View
        android:layout_width="415dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_orangevector" />


</RelativeLayout>